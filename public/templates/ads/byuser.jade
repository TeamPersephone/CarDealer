.content
    .row(ng-controller="AdsByUserController")
        .row.text-center.page-header
            h1 Latest ads
            .row.text-left
                .col-lg-4(ng-repeat="ad in ads")
                    .panel-primary
                        .panel-heading
                            h3.panel-title {{ad.model}}
                        .panel-body
                            .row
                                img.pull-left(src="/picture/{{ad.picture}}" width='40%')
                                ul.pull-right.car-info
                                    li
                                        strong Manufacturer
                                        .pull-right {{ad.make}}
                                    li
                                        strong Model
                                        .pull-right {{ad.model}}
                                    li
                                        strong Fuel
                                        .pull-right {{ad.fuelType}}
                                    li
                                        a(href='#/ad/{{ad._id}}') View Details
                            .row Posted by
                                strong
                                    a(href='#/byuser/{{ad.user._id}}')
                                        |  {{ad.user.username}}
                                |  on
                                strong  {{ad.published | date:'medium'}}